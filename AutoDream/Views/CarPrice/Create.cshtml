@model AutoDream.Models.CarPrice
<h1>Визначення очікуваної ціни авто</h1>
@*<h4></h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpectedPrice" class="control-label">Очікуванна вартість</label>
                <input asp-for="ExpectedPrice" class="form-control" />
                <span asp-validation-for="ExpectedPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxDiscount" class="control-label">Максимальний відсоток знижки</label>
                <input asp-for="MaxDiscount" class="form-control" />
                <span asp-validation-for="MaxDiscount" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewBag.Id" name="CarId"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

